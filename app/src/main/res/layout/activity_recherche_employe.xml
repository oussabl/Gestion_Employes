<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RechercheEmploye">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtid"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/purple_500"
                android:foregroundGravity="center_horizontal"
                android:gravity="center"
                android:text="ID"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView_ID"
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:layout_height="40dp"
                android:foregroundGravity="center_horizontal"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/purple_500"
                android:foregroundGravity="center_horizontal"
                android:gravity="center"
                android:text="Nom"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_Viewnomm"
                android:foregroundGravity="center_horizontal"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_height="40dp"

                android:layout_width="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:foregroundGravity="center"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_Prenom"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/text_missionnView"
                android:background="@color/purple_500"
                android:foregroundGravity="center_horizontal"
                android:gravity="center"
                android:text="Prenom"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_Viewprenomm"
                android:foregroundGravity="center_horizontal"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/purple_500"
                android:foregroundGravity="center_horizontal"
                android:gravity="center"
                android:text="Telephone"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_tellView"
                android:foregroundGravity="center_horizontal"
                android:gravity="center"
                android:textSize="18sp"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="40dp"
/>        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/purple_500"
                android:foregroundGravity="center_horizontal"
                android:gravity="center"
                android:text="Mission"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_missionnView"
                android:layout_width="match_parent"
                android:foregroundGravity="center_horizontal"
                android:gravity="center"
                android:textSize="18sp"

                android:layout_height="40dp"
/>        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/purple_500"
                android:text="Date_Depart"
                android:foregroundGravity="center_horizontal"
                android:gravity="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_deppView"
                android:layout_width="match_parent"
                android:foregroundGravity="center_horizontal"
                android:gravity="center"                android:textSize="18sp"

                android:layout_height="40dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/purple_500"
                android:text="Date_Arrive"
                android:foregroundGravity="center_horizontal"
                android:gravity="center"
                android:textSize="16sp" />

            <TextView

                android:id="@+id/text_arrrView"
                android:layout_width="match_parent"
                android:foregroundGravity="center_horizontal"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_height="40dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonBack"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="BACK" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>